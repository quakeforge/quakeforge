	compose_attach = {
		bindings = (
			{
				binding = 0;
				descriptorType = input_attachment;
				descriptorCount = 1;
				stageFlags = fragment;
			},
			{
				binding = 1;
				descriptorType = input_attachment;
				descriptorCount = 1;
				stageFlags = fragment;
			},
			{
				binding = 2;
				descriptorType = input_attachment;
				descriptorCount = 1;
				stageFlags = fragment;
