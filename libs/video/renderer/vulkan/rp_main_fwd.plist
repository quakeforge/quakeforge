				stageFlags = vertex|fragment;
			},
			{
				binding = 1;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = vertex|fragment;
			},
			{
				binding = 2;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = fragment;
			},
			{
				binding = 3;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = fragment;
			},
			{
				binding = 4;
				descriptorType = storage_buffer;
