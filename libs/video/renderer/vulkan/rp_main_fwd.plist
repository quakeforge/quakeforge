			{
				binding = 1;
				descriptorType = input_attachment;
				descriptorCount = 1;
				stageFlags = fragment;
			},
			{
				binding = 2;
				descriptorType = input_attachment;
				descriptorCount = 1;
				stageFlags = fragment;
			},
			{
				binding = 3;
				descriptorType = input_attachment;
				descriptorCount = 1;
				stageFlags = fragment;
			},
			{
				binding = 4;
				descriptorType = input_attachment;
				descriptorCount = 1;
				stageFlags = fragment;
			},
		);
	};
	lighting_lights = {
		bindings = (
			{
				binding = 0;
