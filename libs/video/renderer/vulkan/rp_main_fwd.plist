	particle_set = {
		bindings = (
			{
				binding = 0;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = compute;
			},
			{
				binding = 1;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = compute;
			},
			{
				binding = 2;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = compute;
			},
		);
	};
	particle_set = {
		bindings = (
			{
				binding = 0;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = compute;
			},
			{
				binding = 1;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = compute;
			},
			{
				binding = 2;
				descriptorType = storage_buffer;
				descriptorCount = 1;
				stageFlags = compute;
