if test "x$HAVE_TDFXGL" = xyes -a "x$ENABLE_3DFX" = xyes; then
	TARGETS="$TARGETS $PACKAGE-3dfx\$(EXEEXT)"
	CL_TARGETS="$CL_TARGETS 3Dfx"
fi
if test "x$ENABLE_DED" = xyes -a "x$ENABLE_DED" = xyes; then
	TARGETS="$TARGETS $PACKAGE-ded\$(EXEEXT)"
fi
